{
    "name": "@dfa/backend",
    "version": "1.0.0",
    "license": "MIT",
    "author": "Renat Gubaev",
    "scripts": {
        "start": "npm run start --prefix src/packages/application/api",
        "build": "npm run build --prefix src/packages/application/api",
        "reset": "npm run reset --prefix src/packages/application/api",
        "api:docker:image:build": "docker build -t dfa-platform-api -f ./docker/api/Dockerfile .",
        "api:docker:image:update": "docker pull dfa-platform-api",
        "api:docker:image:remove": "docker rmi -f dfa-platform-api",
        "api:docker:container:run": "docker-compose up -d dfa-platform-api",
        "api:docker:container:start": "docker start dfa-platform-api",
        "api:docker:container:stop": "docker stop dfa-platform-api",
        "api:docker:container:remove": "docker rm dfa-platform-api",
        "submodules:update": "git submodule update --init"
    },
    "dependencies": {
        "@hlf-core/transport-common": "^3.0.15",
        "@hlf-explorer/monitor": "~3.2.4",
        "@nestjs/platform-express": "^10.4.1",
        "@nestjs/swagger": "^7.1.6",
        "@nestjs/typeorm": "^10.0.2",
        "@project/common": "file:./src/externals/common",
        "@project/module": "file:./src/packages/module",
        "@ts-core/backend-nestjs": "~10.0.6",
        "@ts-core/socket-server": "~3.0.19",
        "@types/request-ip": "^0.0.41"
    }
}
